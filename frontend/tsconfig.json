{
  "compilerOptions": {
    "target": "ESNext", // Updated to a modern target to support import.meta
    "lib": ["dom", "esnext"], // Updated to 'esnext' to support the latest features
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["src/*"]
    },
    "moduleResolution": "bundler", // Use bundler mode for module resolution
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext" // Updated to ESNext for import.meta compatibility
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
